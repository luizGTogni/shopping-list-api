{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "24.0.0",
  "extends": "@tsconfig/node24/tsconfig.json",

  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "module": "nodenext",
    "target": "es2024",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}