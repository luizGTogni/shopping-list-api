{
    "$schema": "https://json.schemastore.org/tsconfig",
    "_version": "24.0.0",
    "extends": "@tsconfig/node24/tsconfig.json",
    "compilerOptions": {
        "lib": [
            "es2024",
            "ESNext.Array",
            "ESNext.Collection",
            "ESNext.Iterator",
            "ESNext.Promise",
            "DOM"
        ],
        "module": "nodenext",
        "target": "es2024",
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}